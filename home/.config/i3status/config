general {
    colors = true
    interval = 5
}

order += "tztime date"
order += "tztime time"
order += "battery value"
order += "disk /"
order += "run_watch recording"

tztime date {
    format = "%b. %d"
}

tztime time {
    format = "%r"
}

battery value {
    format = "⚡ %percentage"
    low_threshold = 20
    threshold_type = "percentage"
    last_full_capacity = true
    integer_battery_capacity = true
}

disk "/" {
    # 𝍖 is the tetragram for fostering.
    format = "𝍖 %percentage_used"
}

run_watch recording {
    pidfile = "~/.screencast.pid"
}
